pipeline {
    agent any
    environment {
        IMAGE_NAME = "buamtech/backend"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                sh 'mvn -f backend/pom.xml clean package -DskipTests'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn -f backend/pom.xml test'
            }
        }
        stage('Docker Build') {
            steps {
                sh 'docker build -t $IMAGE_NAME:latest backend/'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploy stage placeholder (e.g. kubectl apply or docker-compose up)'
            }
        }
    }
}
